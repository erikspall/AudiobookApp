<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="de.erikspall.audiobookapp.ui.library.LibraryFragment"
        android:label="@string/title_library"
        tools:layout="@layout/fragment_library" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="de.erikspall.audiobookapp.ui.now_playing.NowPlayingFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_now_playing" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="de.erikspall.audiobookapp.ui.settings.SettingsFragment"
        android:label="@string/title_now_playing"
        tools:layout="@layout/fragment_settings" />
</navigation>